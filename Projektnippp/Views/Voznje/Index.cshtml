@model IEnumerable<Projektnippp.Models.Voznja>

@{
    ViewBag.Title = "Index";
}

<h2>Voznje</h2>
<p>
    @Html.ActionLink("Kreiraj novu voznju", "Create")
</p>
<br />
<br />
<br />
<div class="col-md-6" align="center">
    @using (Html.BeginForm("Index", "Voznje", FormMethod.Get))
    {
        <p>Polaziste<br /> @Html.TextBox("polaziste")<br /></p>
        <p>Dolaziste<br />  @Html.TextBox("dolaziste")<br /></p>
        <p>Datum<br />  @Html.TextBox("datum")<br /></p>
        <input type="submit" value="Pronadji voznju" style="background:#4553c1 ;color:white; border-radius:5px; padding:5px;" />
    }
</div>
<br />
<br />
<br />

<table class="table">
    <tr style="background-color:#4553c1; color:white;">
        <th>
            Naziv broda
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skracenica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Polaziste)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dolaziste)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vrijeme_polaska)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Datum_polaska)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slobodna_mjesta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cijena)
        </th>
        <th><center>AKCIJE</center></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td>Ne postoji takav brod</td>
        </tr>
    }

@foreach (var item in Model) {
    <tr style="background-color:white; border:2px dotted #000000;">
        <td>
            @Html.DisplayFor(modelItem => item.Brod.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Skracenica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Polaziste)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dolaziste)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vrijeme_polaska)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Datum_polaska)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slobodna_mjesta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cijena)
        </td>
        <td style="border:2px dotted #000000;">
            @Html.ActionLink("Promjeni", "Edit", new { id=item.VoznjaId }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.VoznjaId }) |
            @Html.ActionLink("Obrisi", "Delete", new { id=item.VoznjaId })
        </td>
    </tr>
}

</table>
