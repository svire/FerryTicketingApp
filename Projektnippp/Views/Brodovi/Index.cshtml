@model IEnumerable<Projektnippp.Models.Brod>

@{
    ViewBag.Title = "Index";
}

<h2>Prikaz brodova</h2>
<p>
    @Html.ActionLink("Dodaj novi brod", "Create")
</p>

<br />
<br />
<br />
<div class="col-md-6" align="center">
    @using (Html.BeginForm("Index", "Brodovi", FormMethod.Get))
    {
        <p>Naziv<br /> @Html.TextBox("naziv")<br /></p>
        <p>Tip<br />  @Html.TextBox("tip")<br /></p>
        <p>Registracija<br />  @Html.TextBox("registracija")<br /></p>
            <input type="submit" value="Pronadji brod" style="background:#4553c1 ;color:white; border-radius:5px; padding:5px;" />
    }
</div>
<br />
<br />
<br />


<table class="table">
    <tr style="background-color:#4553c1; color:white;">
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Registracija)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brojsjedista)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th><center>AKCIJE</center></th>
    </tr>
    @if(Model.Count()==0)
    {
        <tr>
            <td>Ne postoji takav brod</td>
        </tr>
    }
@foreach (var item in Model) {
    <tr style="background-color:white; border:2px dotted #000000;">
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Registracija)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brojsjedista)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td style="border:2px dotted #000000;">
            @Html.ActionLink("Promjeni", "Edit", new { id=item.BrodId }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.BrodId }) |
            @Html.ActionLink("Obrisi", "Delete", new { id=item.BrodId })
        </td>
    </tr>
}

</table>
